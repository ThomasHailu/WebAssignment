
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Hospital_Management_System.ViewModels.HR.IndexVM>

<h2>Human Resource and Operations</h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="HR" asp-action="RegisterEmployee">Create new Employee</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style= "width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Active Status</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td width="25%">@employee.Id</td>
                        <td width="25%">@employee.Name</td>
                        <td width="25%">@employee.Role</td>
                        <td width="25%">@employee.IsActive</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="HR" asp-action="UpdateEmployee" asp-route-Id="@employee.Id">Update</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>